<h1><%= @topic.name %></h1>
<% if user_is_authorized_for_topics? %>
  <%= link_to "Edit Topic", edit_topic_path, class:'btn btn-success btn-xs' %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this topic?' } %>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p class="lead">
       <%= @topic.description %>
    </p>
    <p><%= render partial: "labels/list", locals: { labels: @topic.labels } %>
      |
     <small>Comments <span class="badge"><%= @topic.comments.count %></span></small>
   </p>
      <!-- Iterate over the posts belonging to @topic to display each post -->
    <h3>Posts</h3>
    <% @topic.posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, topic_post_path(@topic, post) %>
            <%= render partial: "labels/list", locals: { labels: post.labels } %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %><br>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if current_user %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
    <h4>Comments</h4>
    <% @topic.comments.each do |comment| %>
      <%= render partial: "comments/comment", locals: {comment: comment, commentable: @topic} %>
    <% end %>
    <%= render partial:"comments/form", locals: {commentable: @topic, comment: Comment.new} %>
  </div>
</div>
