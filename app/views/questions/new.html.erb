<h1>Questions#new</h1>
<p>Find me in app/views/questions/new.html.erb</p>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
    <ul>
       <li>Make sure it rhymes.</li>
       <li>Don't use the letter "A".</li>
       <li>The incessant use of hashtags will get you banned.</li>
     </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
    <div class="form-group">
     <%= f.label :title %>
     <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
   </div>
   <div class="form-group">
    <%= f.label :resolved %>
    <%= f.check_box :resolved, class: 'checkbox' %>
   </div>
   <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
 <% end %>
 </div>
 </div>
