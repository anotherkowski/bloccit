<div class="media">
   <%= render partial: 'votes/voter', locals: { post: post } %>
   <% avatar_url = post.user.avatar_url(35) %>
   <div class="media-left">
     <%= image_tag avatar_url, class: 'media-object' %>
   </div>
   <div class="media-body">
     <h4 class="media-heading">
       <%= link_to post.title, topic_post_path(post.topic, post) %>
       <%= render partial: "labels/list", locals: { labels: post.labels } %>
     </h4>
     <small>
       submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
       <%= pluralize(post.comments.count, 'comment') %>,
       <%= pluralize(post.favorites.count, 'favorite') %>,
       <%= pluralize(post.votes.count, 'vote') %>
     </small>
   </div>
 </div>
